{
    "name": "sawirricardo/icd-api-php",
    "description": "API Client to use ICD API https://icd.who.int/icdapi/",
    "keywords": [
        "sawirricardo",
        "icd-api-php"
    ],
    "homepage": "https://github.com/sawirricardo/icd-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "sawirricardo",
            "email": "sawir.ricardo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "sammyjo20/saloon": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Sawirricardo\\IcdApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sawirricardo\\IcdApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
